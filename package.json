{
  "name": "node-kasa",
  "version": "0.10.2",
  "description": "Node.js API for TP-Link Kasa and Tapo devices",
  "main": "kasa/index.js",
  "types": "types/index.d.ts",
  "type": "module",
  "bin": {
    "kasa": "./cli/main.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "npm test -- --watch",
    "lint": "eslint kasa/ --ext .js",
    "lint:fix": "eslint kasa/ --ext .js --fix",
    "start": "node kasa/index.js",
    "dev": "node --inspect kasa/index.js"
  },
  "keywords": [
    "tplink",
    "kasa",
    "tapo",
    "smart-home",
    "iot",
    "smart-devices",
    "javascript",
    "nodejs"
  ],
  "author": "node-kasa developers",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "commander": "^11.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "eslint": "^8.50.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testMatch": ["**/tests/**/*.test.js"],
    "transform": {},
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/node-kasa/node-kasa.git"
  },
  "bugs": {
    "url": "https://github.com/node-kasa/node-kasa/issues"
  },
  "homepage": "https://github.com/node-kasa/node-kasa#readme"
}